<%- include("partials/header") %>
    <main>
        <section class="scrolling_info">
            <div class="info">
                <p>Free shipping on orders over &#8358;50,000</p>
            </div>
        </section>
        <div class="title">
            <h2>Accessories</h2>
            <p>keep your pets clean and happy</p>
        </div>
        <div class="lsContainer">
            <% if (accessoryProducts) { %>
            <% accessoryProducts.forEach(product => { %>
                <div class="product">
                    <a href="/product/accessory/<%= product.id %>">
                        <div class="product-img">
                            <img src="<%= product.accessory_url %>" alt="">
                        </div>
                        <div class="product-txt">
                            <p><%= product.accessory_name %></p>
                            <h3 class="price"><%= product.accessory_prie %></h3>
                        </div>
                    </a>
                </div>
            <% }); %>
            <% } %>
        </div>
    </main>
<%- include("partials/footer") %>